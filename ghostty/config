font-thicken = true
font-thicken-strength = 175
theme = kanagawabones

window-decoration = none

shell-integration = detect
scrollback-limit = 100000000
focus-follows-mouse = true
auto-update = download

# Window configuration
window-height = 75
window-width = 200
window-padding-balance = true
cursor-style = block
cursor-style-blink = true
# background-opacity= 0.80
# background-blur-radius = 20

resize-overlay = never

# Splits
keybind = alt+shift+ctrl+cmd+v=new_split:right
keybind = alt+shift+ctrl+cmd+h=new_split:down
keybind = alt+shift+ctrl+cmd+z=toggle_split_zoom
keybind = alt+shift+ctrl+cmd+o=goto_split:previous

# Split movement
keybind = alt+shift+ctrl+cmd+j=goto_split:down
keybind = alt+shift+ctrl+cmd+k=goto_split:up
keybind = alt+shift+ctrl+cmd+h=goto_split:left
keybind = alt+shift+ctrl+cmd+l=goto_split:right

# Tab movement
keybind = alt+shift+ctrl+cmd+n=next_tab
keybind = alt+shift+ctrl+cmd+p=previous_tab
keybind = alt+shift+ctrl+cmd+1=goto_tab:1
keybind = alt+shift+ctrl+cmd+2=goto_tab:2
keybind = alt+shift+ctrl+cmd+3=goto_tab:3
keybind = alt+shift+ctrl+cmd+4=goto_tab:4
keybind = alt+shift+ctrl+cmd+5=goto_tab:5


# Quick Terminal
quick-terminal-autohide = false
keybind = global:ctrl+grave_accent=toggle_quick_terminal

