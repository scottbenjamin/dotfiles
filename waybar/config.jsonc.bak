{
  // -------------------------------------------------------------------------
  // Global configuration
  // -------------------------------------------------------------------------
  "ipc": true,
  "layer": "top",
  "position": "top",
  "height": 8,
  "width": 2560,
  "margin-left": 10,
  "margin-bottom": 0,
  "margin-top": 0,
  "margin-right": 10,
  "output": [
    "DP-1"
  ],
  "modules-left": [
    //"custom/rofi",
    "hyprland/workspaces",
    "niri/workspaces",
    "sway/workspaces",
    "temperature",
  ],
  "modules-center": [
    "custom/spotify",
    "custom/weather"
  ],
  "modules-right": [
    "network",
    "wireplumber",
    "custom/screenshot_t",
    "tray",
    "clock#3",
    "clock#2",
    "custom/power"
  ],
  "sway/mode": {
    "format": "Ôóº {}",
    "max-length": 50
  },
  // -------------------------------------------------------------------------
  // Modules
  // -------------------------------------------------------------------------
  "custom/sp1": {
    "format": " | ",
    "tooltip": false
  },
  "custom/sp2": {
    "format": " |",
    "tooltip": false
  },
  "custom/rofi": {
    "format": "ÔÉâ",
    "tooltip": false,
    "on-click-right": "nwg-drawer",
    "on-click": "wofi --show run",
    "on-click-middle": "pkill -9 wofi"
  },
  "custom/screenshot_t": {
    "format": "ÔÄ∞ ",
    "on-click": "~/.config/hypr/scripts/screenshot_full",
    "on-click-right": "~/.config/hypr/scripts/screenshot_area"
  },
  "clock#1": {
    "format": "ÔÅ≥ {:%a}",
    "tooltip": false,
    "on-click": "gsimplecal"
  },
  "clock#2": {
    "format": "Ôâ¥ {:%d-%h-%Y}",
    "tooltip": false,
    "on-click": "gsimplecal"
  },
  "clock#3": {
    "format": "ÔÄó {:%H:%M:%S %p}",
    "tooltip": false,
    "on-click": "gsimplecal"
  },
  "temperature": {
    // "thermal-zone": 1,
    "interval": 4,
    //"hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "Ôãâ {temperatureC}¬∞C",
    "format-critical": "ÔÅ±  {temperatureC}¬∞C",
    "format": "{icon}  {temperatureC}¬∞C",
    "format-icons": [
      "Ôù´",
      "Ôãâ",
      "Ôù©"
    ],
    "max-length": 7,
    "min-length": 7,
    "on-click": "xsensors"
  },
  "memory": {
    "interval": 30,
    "format": "Ôãõ  {used:0.2f} / {total:0.0f} GB",
    "on-click": "alacritty -e btop"
  },
  "battery": {
    "interval": 2,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "ÔñÉ {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ]
  },
  "network": {
    "interface": "enp10s0",
    "format": "{ifname}",
    "format-wifi": "{essid} ({signalStrength}%) Ôá´",
    "format-ethernet": "U:{bandwidthUpBytes} D:{bandwidthDownBytes} Û∞äó",
    "format-disconnected": "", //An empty format will hide the module.
    "tooltip-format": "{ifname} via {gwaddr} Û∞äó",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
    "tooltip-format-ethernet": "{ifname} ÔÉÅ",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50
  },
  "custom/storage": {
    "format": "ÔÇ† {}",
    "format-alt": "{percentage}% ÔÇ†",
    "format-alt-click": "click-right",
    "return-type": "json",
    "interval": 60,
    "exec": "~/.config/waybar/modules/storage.sh"
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-alt": "{percent}% {icon}",
    "format-alt-click": "click-right",
    //"format-icons": ["ÔÉ´", "Ô†¥"],
    "format-icons": [
      "ÔÜÖ",
      "ÔÑë"
    ],
    "on-scroll-down": "brightnessctl s 5%-",
    "on-scroll-up": "brightnessctl s +5%"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    },
    "tooltip": "true"
  },
  "custom/weather": {
    "format": "{}",
    "format-alt": "{alt}: {}",
    "format-alt-click": "click-right",
    "interval": 3600,
    "exec": "curl -s 'https://v3.wttr.in/?u&format=2'",
    //"return-type": "json",
    //"exec": "~/.config/waybar/modules/weather.sh",
    "exec-if": "ping wttr.in -c1"
  },
  "custom/pacman": {
    "format": "<big>ÙèÜ≤</big>  {}",
    "interval": 3600, // every hour
    "exec": "checkupdates | wc -l", // # of updates
    "exec-if": "exit 0", // always run; consider advanced run conditions
    "on-click": "alacritty -e 'paru'; pkill -SIGRTMIN+8 waybar", // update system
    "signal": 8,
    "max-length": 5,
    "min-length": 3
  },
  "custom/spotify": {
    "exec": "~/.config/waybar/mediaplayer.py --player spotify",
    "format": "ÔÜº [ {}  ]",
    "return-type": "json",
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous"
  },
  "custom/media": {
    "format": "{0} {1}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú"
    },
    "escape": true,
    //"exec": "~/.config/waybar/mediaplayer.py" // Script in resources folder
    // "exec": "~/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  },
  "custom/power": {
    "format": " Û∞ê• ",
    "tooltip": false,
    "on-click": "wlogout"
  },
  "clock": {
    "interval": 5,
    "format": "ÔÄó  {:%H:%M  ÔÅ≥ %e %b}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "today-format": "<b>{}</b>"
  },
  "clock#date": {
    "format": "Û∞•î  {:%H:%M \nÔÅ≥ %e %b}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "today-format": "<b>{}</b>"
  },
  "custom/gammastep": {
    "interval": 5,
    "return-type": "json",
    "exec": {
      "pre": "if unit_status=\"$(systemctl --user is-active gammastep)\"; then\nstatus=\"$unit_status ($(journalctl --user -u gammastep.service -g 'Period: ' | tail -1 | cut -d ':' -f6 | xargs))\"\nelse\nstatus=\"$unit_status\"\nfi",
      "alt": "${status:-inactive}",
      "tooltip": "Gammastep is $status",
    },
    "format": "{icon}",
    "format-icons": {
      "activating": "Û∞Å™ ",
      "deactivating": "Û∞Å™ ",
      "inactive": "? ",
      "active (Night)": "ÔÜÜ ",
      "active (Nighttime)": "ÔÜÜ ",
      "active (Transition (Night)": "ÔÜÜ ",
      "active (Transition (Nighttime)": "ÔÜÜ ",
      "active (Day)": "Óåç ",
      "active (Daytime)": "Óåç ",
      "active (Transition (Day)": "Óåç ",
      "active (Transition (Daytime)": "Óåç ",
    },
    "on-click": "systemctl --user is-active gammastep && systemctl --user stop gammastep || systemctl --user start gammastep",
  },
  "cpu": {
    "interval": 1,
    //"format": "Ôãõ {}%", // Icon: microchip
    "format": "{max_frequency}GHz <span color=\"darkgray\">| {usage}%</span>",
    "max-length": 25,
    "min-length": 13
  },
  "mpd": {
    "max-length": 25,
    "format": "<span foreground='#bb9af7'>ÔÄÅ</span> {title}",
    "format-paused": "ÔÄÅ {title}",
    "format-stopped": "<span foreground='#bb9af7'>ÔÄÅ</span>",
    "format-disconnected": "",
    "on-click": "mpc --quiet toggle",
    "on-click-right": "mpc update; mpc ls | mpc add",
    "on-click-middle": "alacritty -e ncmpcpp",
    "on-scroll-up": "mpc --quiet prev",
    "on-scroll-down": "mpc --quiet next",
    "smooth-scrolling-threshold": 5,
    "tooltip-format": "{title} - {artist} ({elapsedTime:%M:%S}/{totalTime:%H:%M:%S})"
  },
  "custom/title": {
    "format": "{}",
    "interval": 0,
    "return-type": "json",
    //"max-length": 35,
    "tooltip": false
  },
  "custom/title#name": {
    "format": "{}",
    "interval": 0,
    "return-type": "json",
    "max-length": 35,
    "exec": "$HOME/.scripts/title"
  },
  /*"custom/keyboard": {
        "format": "ÔÑú {}",
        "interval": 1,
        "exec": "$HOME/.config/waybar/get_kbdlayout.sh"
    },*/
